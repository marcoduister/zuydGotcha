@model zuydGotcha.ViewModels.RuleSet.RuleSetViewModel

@{
    ViewBag.Title = "RuleSet bewerken";
}

<h2>RuleSet bewerken</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="container">
        <div class="row">
            <div class="col">
                <h4>RuleSet</h4>
                <hr />
                <div class="form-group">
                    @Html.LabelFor(model => model.RuleSet_Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.RuleSet_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.RuleSet_Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.RuleSet_public, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.RuleSet_public)
                            @Html.ValidationMessageFor(model => model.RuleSet_public, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Selecteer Worden </label>
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.ListBoxFor(n => n.SelectedIds, new SelectList(Model.DropdownRuleList, "Id", "Rule_Name"))
                            @Html.ValidationMessageFor(model => model.SelectedIds, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">

            </div>
        </div>
    </div>

    <div class="form-horizontal">

        <div class="form-group">

            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Terug", "Index")
            </div>
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
