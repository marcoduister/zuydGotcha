@model IEnumerable<Models.Game>

@{
    ViewBag.Title = "Game Overzicht";
}

<h2>Game Overzicht</h2>

<p>
    @Html.ActionLink("Neiuw Spel", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Game_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Game_Start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Creator)*@
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Game_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Game_Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Creator)*@
            </td>
            <td>
                @Html.ActionLink("Join", "Join", new { id = item.Id }) |
                @Html.ActionLink("inzien", "Details", new { id = item.Id }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
