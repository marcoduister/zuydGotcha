@model Models.Word

@{
    ViewBag.Title = "Woord Kopieren";
}

<h2>Woord Kopiëren</h2>

<h3>Weet u zeker dat u dit woord wilt kopiëren?</h3>
<div>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Word_Name)
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Word_Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Word_Name)
            </dd>
        </dl>

        <div class="form-actions no-color">
            <input type="submit" value="Kopieren" class="btn btn-default" /> |
            @Html.ActionLink("Terug", "Index")
        </div>
    }
</div>

