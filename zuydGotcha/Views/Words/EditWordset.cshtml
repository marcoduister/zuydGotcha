@model zuydGotcha.ViewModels.Words.EditWordsetViewModel

@{
    ViewBag.Title = "EditWordset";
}

<h2>EditWordset</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group col-md-3">
            <div class="input-group mb-3">
                <span class="input-group-text" id="inputGroup-sizing-default">Woord</span>
                <input type="text" class="form-control">
            </div>
        </div>

        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="button" class="btn btn-success">Bijwerken</button>
                <button type="button" class="btn btn-secondary">Annuleren</button>
            </div>
        </div>
    </div>
}