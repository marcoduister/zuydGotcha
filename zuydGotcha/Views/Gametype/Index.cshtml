@model IEnumerable<Models.GameType>

@{
    ViewBag.Title = "SpelType Overzicht";
}

<h2>SpelType Overzicht</h2>


@if (Session["UserRole"].ToString() == Models.Enums.Rolen.Admin.ToString())
{
<p>
    <button type="button" class="btn btn-success btn-sm">SpelType aanmaken</button>
</p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GameType_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameType_Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Maker_Id)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GameType_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameType_Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Maker_Id)
            </td>
            <td>
                @if (Session["UserRole"].ToString() == Models.Enums.Rolen.Admin.ToString())
                {
                   <button type="button" class="btn btn-info btn-sm">Inzien</button>
                   <button type="button" class="btn btn-success btn-sm">Bewerk</button>
                   <button type="button" class="btn btn-info btn-sm">Verwijder</button>
                }

            </td>
        </tr>
    }

</table>
